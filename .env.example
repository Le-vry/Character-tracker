# Environment variables template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git - only commit this .env.example

# Node environment
NODE_ENV="development"

# Database connection string
# Development: SQLite file path
# Production: PostgreSQL/MySQL/etc connection string
DATABASE_URL="file:./dev.db"

# Application URL
APP_URL="http://localhost:4173"

# Production example (for reference):
# NODE_ENV="production"
# DATABASE_URL="postgresql://user:password@localhost:5432/character_tracker"
# APP_URL="https://yourdomain.com"
